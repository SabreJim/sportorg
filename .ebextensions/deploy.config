commands:
  get_sudo:
    command: echo Defaults: root \!requiretty >> /etc/sudoers
  npm_install:
    command: sudo yum -y --enablerepo=epel install npm
  npm_install_bower:
    command: sudo npm install -g bower
container_commands:
  bower_install:
    command: sudo bower install --allow-root
  gulp_clean-build-app-dev
    command: gulp clean-build-app-dev