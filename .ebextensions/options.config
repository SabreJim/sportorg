commands:
  01_node_install:
    command: yum install -y gcc-c++ make
  02_npm_install:
    command: curl -sL https://rpm.nodesource.com/setup_8.x | sudo -E bash -
  02_npm_install:
    command: yum install nodejs

option_settings:
  aws:elasticbeanstalk:customoption:
    NewSignupEmail: me@example.com
  aws:elasticbeanstalk:application:environment:
    THEME: "flatly"
    AWS_REGION: '`{"Ref" : "AWS::Region"}`'
  aws:elasticbeanstalk:container:nodejs:
    ProxyServer: nginx
    NodeVersion: 8.11.3
  aws:elasticbeanstalk:container:nodejs:staticfiles:
    /: /pages

container_commands:
  01_npm_config:
    command: npm config set registry http://registry.npmjs.org/
  02_npm_install:
    command: npm install